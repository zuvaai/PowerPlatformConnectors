{
  "properties": {
    "connectionParameters": {
      "api_key": {
        "type": "securestring",
        "uiDefinition": {
          "displayName": "Token",
          "description": "Your DocAI token",
          "tooltip": "Provide your token",
          "constraints": {
            "tabIndex": 2,
            "clearText": false,
            "required": "true"
          }
        }
      },
    "hostName": {
      "type": "string",
      "uiDefinition": {
        "constraints": {
          "required": "true"
        },
        "description": "e.g. us.app.zuva.ai",
        "displayName": "DocAI Hostname",
        "default": "hostname of a DocAI region, e.g. us.app.zuva.ai",
        "tooltip": "Provide the hostname of a DocAI region, such as us.app.zuva.ai"
      }
    }
    },
    "iconBrandColor": "#20399D",
    "capabilities": [],
    "publisher": "Zuva Inc.",
    "stackOwner": "Zuva Inc.",
    "policyTemplateInstances": [
      {
        "parameters": {
          "x-ms-apimTemplateParameter.urlTemplate": "https://@connectionParameters('hostName')/api/v2/"
        },
        "templateId": "dynamichosturl",
        "title": "Route to correct DocAI region"
      }
    ]
  }
}